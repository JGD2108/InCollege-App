{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "COBOL: Build active file",
      "type": "shell",
      "command": "mkdir -p bin && cobc -x -free -o \"bin/${fileBasenameNoExtension}\" \"${file}\"",
      "windows": {
        "command": "if (!(Test-Path \"bin\")) { New-Item -ItemType Directory -Path \"bin\" | Out-Null }; cobc -x -free -o \"bin/${fileBasenameNoExtension}\" \"${file}\""
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Run active file",
      "type": "process",
      "command": "bin/${fileBasenameNoExtension}",
      "dependsOn": "COBOL: Build active file",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Build Single-file InCollege",
      "type": "shell",
      "command": "mkdir -p \"${workspaceFolder}/bin\" && cobc -x -free -o \"${workspaceFolder}/bin/InCollege\" \"${workspaceFolder}/src/InCollege.cob\"",
      "windows": {
        "command": "if (!(Test-Path \"${workspaceFolder}\\bin\")) { New-Item -ItemType Directory -Path \"${workspaceFolder}\\bin\" | Out-Null }; cobc -x -free -o \"${workspaceFolder}\\bin\\InCollege\" \"${workspaceFolder}\\src\\InCollege.cob\""
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "label": "COBOL: Run InCollege",
      "type": "process",
      "command": "${workspaceFolder}/bin/InCollege",
      "windows": {
        "command": "${workspaceFolder}\\bin\\InCollege"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Build and Run active file",
      "type": "shell",
      "command": "mkdir -p \"${fileDirname}/bin\" && cobc -x -free -o \"${fileDirname}/bin/${fileBasenameNoExtension}\" \"${file}\"",
      "windows": {
        "command": "if (!(Test-Path \"${fileDirname}\\bin\")) { New-Item -ItemType Directory -Path \"${fileDirname}\\bin\" | Out-Null }; cobc -x -free -o \"${fileDirname}\\bin\\${fileBasenameNoExtension}\" \"${file}\""
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}
