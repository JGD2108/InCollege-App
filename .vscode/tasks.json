{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "COBOL: Build active file",
      "type": "shell",
      "command": "mkdir -p bin && cobc -x -free -o bin/${fileBasenameNoExtension} ${file}",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Run active file",
      "type": "process",
      "command": "bin/${fileBasenameNoExtension}",
      "dependsOn": "COBOL: Build active file",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Build Modular InCollege",
      "type": "shell",
      "command": "mkdir -p /workspace/bin && cobc -x -free -o /workspace/bin/InCollegeModules /workspace/src/InCollegeModules.cob $(find /workspace/src -name '*.cob' -not -name 'InCollege.cob' -not -name 'InCollegeModules.cob') && cobc -x -free -o /workspace/bin/InCollege /workspace/src/InCollege.cob",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "label": "COBOL: Build Single-file InCollege",
      "type": "shell",
      "command": "mkdir -p /workspace/bin && cobc -x -free -o /workspace/bin/InCollegeSingle /workspace/src/InCollege.cob",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": [
        {
          "owner": "cobc",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^(.*):(\\d+): (warning|error): (.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "label": "COBOL: Run InCollege",
      "type": "process",
      "command": "/workspace/bin/InCollege",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "COBOL: Build and Run active file",
      "type": "shell",
      "command": "mkdir -p \"${fileDirname}/bin\" && cobc -x -free -o \"${fileDirname}/bin/${fileBasenameNoExtension}\" \"${file}\"",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}